# Database Configuration
# For local development, use: postgresql://username:password@localhost:5432/maya_db
# Railway will automatically provide this in production
DATABASE_URL=postgresql://localhost:5432/maya_db

# Stripe API Keys (Get from https://dashboard.stripe.com/test/apikeys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret (Generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Email Configuration (Optional - for order notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Resend API Key (for transactional emails)
RESEND_API_KEY=re_your_resend_api_key_here

# Admin Credentials
ADMIN_EMAIL=hello@entermaya.com
ADMIN_PASSWORD=change_this_password

# Database Backup Configuration (Production only)
# Hourly backups are sent to this email address
BACKUP_EMAIL=hello@entermaya.com

# Google Sheets Order Logging (Optional - for backup order logging)
GOOGLE_SHEETS_WEBHOOK_URL=https://script.google.com/macros/s/your_script_id/exec

# eBook Delivery (S3-compatible storage)
# These are used to generate short-lived presigned download URLs.
ENDPOINT_URL=https://your-s3-compatible-endpoint
BUCKET_NAME=your-bucket-name
ACCESS_KEY_ID=your-access-key-id
SECRET_ACCESS_KEY=your-secret-access-key

# Optional; some providers accept "auto". If unset, the app defaults to "auto".
AWS_REGION=auto

# Object keys inside the bucket
EBOOK_PDF_KEY=maya/ebook/MAYA-Seed-Takes-Root.pdf
EBOOK_EPUB_KEY=maya/ebook/MAYA-Seed-Takes-Root.epub
EBOOK_DICTIONARY_KEY=maya/ebook/MAYA-Dictionary.mobi

# Presigned URL TTL (seconds)
EBOOK_URL_TTL_SECONDS=300
