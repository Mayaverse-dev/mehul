# Database Configuration
# For local development, use: postgresql://username:password@localhost:5432/maya_db
# Railway will automatically provide this in production
DATABASE_URL=postgresql://localhost:5432/maya_db

# Stripe API Keys (Get from https://dashboard.stripe.com/test/apikeys)
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret (Generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Email Configuration (Optional - for order notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_password

